{
  "name": "company-ui",
  "version": "1.0.0",
  "private": true,
  "description": "Company UI monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "lint:lint-staged": "lint-staged -c ./.husky/lintstagedrc.js",
    "lint:prettier": "prettier --write \"{docs,packages}/**/*.{js,jsx,cjs,json,tsx,ts,css,less,scss,vue,html,md}\"",
    "lint:eslint": "eslint --cache --max-warnings 0 \"{docs,packages}/**/*.{js,jsx,cjs,tsx,ts}\" --fix",
    "lint:stylelint": "stylelint --cache --fix \"{docs,packages}/**/*.{css,less,scss,styl,postcss,vue}\" --cache --cache-location node_modules/.cache/stylelint/",
    "dev": "concurrently \"npm run code:dev\" \"npm run docs:dev\"",
    "code:dev": "pnpm -r --aggregate-output --filter=./packages/* dev",
    "build": "pnpm -r --aggregate-output --filter=./packages/* build",
    "clear": "rimraf 'packages/*/{dist,node_modules}' && rimraf node_modules",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "changeset": "changeset",
    "version-packages": "changeset version"
  },
  "keywords": [],
  "author": "zhensherlock",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/eslint-parser": "^7.22.10",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@company-ui/dom": "workspace:^",
    "@element-plus/icons-vue": "^2.1.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-eslint": "^9.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-strip": "^3.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/markdown-it": "^13.0.0",
    "@typescript-eslint/parser": "^6.4.1",
    "@vue/theme": "^2.2.4",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "core-js": "^3.32.1",
    "cssnano": "^6.0.1",
    "element-plus": "^2.3.9",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-define-config": "^1.23.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-sass": "^1.12.20",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-order": "^6.0.3",
    "terser": "^5.19.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "unplugin-element-plus": "^0.8.0",
    "vitepress": "1.0.0-rc.10"
  }
}
